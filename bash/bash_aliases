# editor {{{
# -----------
vit()
{
	if [[ ! -z "$VIM_TERMINAL" ]]; then
		if [ $# -eq 0 ]; then
			echo "You are already inside Vim. Provide filenames as arguments"
		else
			readlink -f $@ | xargs printf '\033]51;["call", "Tapi_vit", ["%s"]]\007'
		fi
	else
		vim $@
	fi
}
alias vi='vim'
alias vim='vit'

